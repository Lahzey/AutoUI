// Each #kernel tells which function to compile; you can have many kernels
#pragma kernel CSMain

struct Ball
{
    float3 pos;
    uint id;
};

AppendStructuredBuffer<Ball> ballBuffer;

[numthreads(8,1,1)]
void CSMain (uint3 id : SV_DispatchThreadID)
{
    if (id.x % 2 == 0)
    {
        Ball b;
        b.pos = float3(id.x, 1, 1);
        b.id = id.x;
        ballBuffer.Append(b);
    }
}
